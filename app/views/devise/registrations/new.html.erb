<h1 class="title-login">HARMONY</span><span class="title-car-login">CAR</span></h1>
<div class = "container-login rounded-card">
<h1>Inscription</h1>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs login-form">
    <%= f.input :first_name,
                label: "Utilisateur",
                required: true,
                autofocus: true,
                input_html: { autocomplete: "first_name" }%>
    <%= f.input :last_name,
                label: false,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "last_name" }%>
    <br>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <br>
    <%= f.input :password, label: "Mot de passe",
                required: true,
                hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password",} %>
    <%= f.input :password_confirmation, label: "Confirmer le mot de passe",
                required: true,
                input_html: { autocomplete: "new-password",} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "S'inscrire", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
