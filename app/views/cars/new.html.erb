<div data-controller="search-car" class="listed_new_cars">
  <div class="new_car_input card-shadow">
    <h2>Recherchez votre véhicule</h2>
    <div class="form-search">
      <%= form_with url: new_car_path, method: :get, html: {
        data: { search_car_target: 'form' } } do |f| %>
        <div class="input-group mb-0">
            <%= f.text_field :query,
                            class: "form-control",
                            placeholder: 'Marque, modèle, année, moteur...',
                            value: params[:query],
                            data: { search_car_target: 'input',
                                    action:'keyup->search-car#update' } %>
          <span class="input-group-text pop-up-icon-search"><i class="fas fa-search pop-up-icon"></i></span>
        </div>
      <% end %>
    </div>
  </div>
  <%= render "components/cars/list", local: { specifications: @specifications, car: @car, alert1: @alert1, alert2: @alert2 } %>
</div>
