<div class="my_vehicule_card card-shadow rounded-card card-shadow">
  <%= link_to car_path(car) do %>

      <!-- image de la voiture -->
      <div>
        <% if car.specification.photo.attached? %>
          <div style="background-image: url('<%= cl_image_path car.specification.photo.key %>')", class="my_vehicule_img" >
          <% @alertscount = Array.new %>
            <% car.alerts.each do |alert| %>
              <% if alert.due_date %>
                <% if alert.due_date <= Date.today %>
                <% @alertscount << alert %>
                <% elsif alert.due_date <= Date.today+alert.alert_category.max_weeks.week %>
                <% @alertscount << alert %>
                <% end %>
              <% end %>
            <% end %>
                <% if @alertscount.count >= 1 %>
                    <i class="my_vehicule_alert fas fa-exclamation-triangle red-icon"></i>
                <% end %>
                <%# <% elsif alert.due_date <= Date.today+alert.alert_category.max_weeks.week %>
                <%# <% elsif @yellowalerts.count >= 1 %>
                  <%# <i class="my_vehicule_alert fas fa-info-circle yellow-icon"></i> %>
          </div>
        <% end %>
        </div>
      <!-- quelque spÃ©cification, model, engine, mileage -->
      <div class="d-flex justify-content-between my_vehicule_details">
        <div>
          <strong><%= car.specification.model%></strong>
          <p class="my_car_engine"><%= car.specification.engine%></p>
        </div>
        <div><i><%= car.mileage%></i> km</div>
      </div>
  <%end%>
</div>
