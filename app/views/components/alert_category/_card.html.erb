<div class="card">
<%# change the font awesome icon coz of alert %>
  <% if alert.due_date  %>
    <% if alert.due_date <= Date.today %>
      <i class="fas fa-exclamation-triangle" style="background-color:red;"></i>
    <% elsif alert.due_date <= Date.today+alert.alert_category.max_weeks.week %>
      <i class="fas fa-info-circle" style="background-color:yellow;"></i>
    <% else %>
      <i class="fas fa-info-circle" style="background-color:green;"></i>
    <% end %>
  <% end %>
  <h2><%= alert.alert_category.name %></h2>
  <i class="fas fa-clock"></i>
  <% if alert.due_date  %>
    <p><%= alert.due_date.strftime("%d/%m/%Y") %></p>
  <% end %>
    <p><%= alert.alert_category.description %></p>
  <div>
    <%= link_to "Prendre RDV", garages_path  %>
  </div>

  <div>
    <%= render 'components/alert_category/pop_up', alert: alert %>
  </div>
</div>
